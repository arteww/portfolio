  <script>
    // Demo: pienehkö JSON data, käyttäjä voi korvata omalla datallaan
    const demo = {
      kumulatiivinen: 31390000,
      ostolaskut: 127034,
      automaatio_pct: 22.45
    };

    document.getElementById('kumulatiivinen').textContent = (demo.kumulatiivinen/1_000_000).toFixed(2) + ' milj. €';

    // Lataa demo JSON (blob) — käyttäjä voi tallentaa saman lähdekansion alle data/data.json
    document.getElementById('download-json').addEventListener('click', ()=>{
      const blob = new Blob([JSON.stringify(demo, null, 2)], {type:'application/json'});
      const url = URL.createObjectURL(blob);
      const a = document.createElement('a'); a.href = url; a.download = 'demo-data.json'; a.click(); URL.revokeObjectURL(url);
    });
  </script>
